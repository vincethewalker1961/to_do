<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <div class="well">
        <p>
          <%= form_for @todo do |f| %>
          <p>
            <%= f.label :name %> <br />
            <%= f.text_field :name, class: 'form-control' %>
          </p>
          
          <p>
            <%= f.label :description %> <br />
            <%= f.text_area :description, class: 'form-control' %>
          </p>
          
          <p>
            <%= f.submit class: "btn btn-primary" %>
          </p>
        
        <% end %>
      </p>
    </div>
  </div>
</div>